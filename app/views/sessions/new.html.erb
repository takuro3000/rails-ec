<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-bold text-gray-900 mb-8">ログイン</h1>

  <%= form_with url: sign_in_path, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.email_field :email,
                           class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                           placeholder: "example@email.com",
                           required: true %>
    </div>

    <div>
      <%= form.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password,
                              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                              required: true %>
    </div>

    <div>
      <%= form.submit "ログイン",
                      class: "w-full bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 transition font-semibold cursor-pointer" %>
    </div>
  <% end %>

  <p class="mt-6 text-center text-sm text-gray-600">
    アカウントをお持ちでない方は
    <%= link_to "会員登録", sign_up_path, class: "text-blue-600 hover:text-blue-800" %>
  </p>
</div>
