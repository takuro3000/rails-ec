<header class="bg-white shadow-sm fixed top-0 left-0 right-0 z-50">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- ロゴ -->
      <div class="flex items-center">
        <%= link_to root_path, class: "text-xl font-bold text-gray-900 hover:text-blue-600 transition" do %>
          Rails EC
        <% end %>
      </div>

      <!-- ナビゲーション -->
      <div class="flex items-center gap-4">
        <% if signed_in? %>
          <!-- ログイン中 -->
          <span class="text-gray-600 text-sm">
            <%= current_user.name %> さん
          </span>
          <%= button_to "ログアウト", sign_out_path,
                        method: :delete,
                        class: "text-gray-600 hover:text-gray-900 text-sm transition" %>
        <% else %>
          <!-- 未ログイン -->
          <%= link_to "ログイン", sign_in_path,
                      class: "text-gray-600 hover:text-gray-900 text-sm transition" %>
          <%= link_to "会員登録", sign_up_path,
                      class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition text-sm" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
