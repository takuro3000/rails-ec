<% if flash.any? %>
  <div class="fixed top-20 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-md px-4">
    <% flash.each do |type, message| %>
      <% bg_class = case type.to_sym
                    when :notice, :success
                      "bg-green-50 border-green-200 text-green-800"
                    when :alert, :error
                      "bg-red-50 border-red-200 text-red-800"
                    else
                      "bg-blue-50 border-blue-200 text-blue-800"
                    end %>
      <div class="<%= bg_class %> border rounded-lg p-4 mb-2 shadow-lg"
           data-controller="flash"
           data-flash-target="message">
        <div class="flex items-center justify-between">
          <p class="text-sm font-medium"><%= message %></p>
          <button type="button"
                  class="text-current opacity-50 hover:opacity-100 transition"
                  data-action="click->flash#close">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
