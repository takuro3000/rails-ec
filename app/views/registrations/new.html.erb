<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-bold text-gray-900 mb-8">会員登録</h1>

  <%= form_with model: @user, url: sign_up_path, class: "space-y-6" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <h2 class="text-red-800 font-semibold mb-2">
          <%= pluralize(@user.errors.count, "件のエラー") %>があります
        </h2>
        <ul class="list-disc list-inside text-red-700 text-sm">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, "お名前", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name,
                          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                          placeholder: "山田 太郎" %>
    </div>

    <div>
      <%= form.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.email_field :email,
                           class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                           placeholder: "example@email.com" %>
    </div>

    <div>
      <%= form.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password,
                              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                              placeholder: "8文字以上" %>
    </div>

    <div>
      <%= form.label :password_confirmation, "パスワード（確認）", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password_confirmation,
                              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.submit "会員登録",
                      class: "w-full bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 transition font-semibold cursor-pointer" %>
    </div>
  <% end %>

  <p class="mt-6 text-center text-sm text-gray-600">
    既にアカウントをお持ちの方は
    <%= link_to "ログイン", sign_in_path, class: "text-blue-600 hover:text-blue-800" %>
  </p>
</div>
